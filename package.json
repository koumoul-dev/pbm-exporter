{
  "name": "pbm-exporter",
  "version": "0.1.2",
  "description": "Prometheus exporter for PBM (Percona Backup Mongodb)",
  "type": "module",
  "scripts": {
    "dev": "DEBUG=pbm-exporter PBM_MONGODB_URI=mongodb://localhost:27017 node --watch server/index.ts",
    "lint": "eslint .",
    "check-types": "tsc",
    "prepare": "husky || true",
    "test": "NODE_ENV=test ENABLE_VULN_ID=true node --disable-warning=ExperimentalWarning --test-force-exit --test-concurrency=1 --test test/*.ts",
    "quality": "npm run lint && npm run check-types && npm run test && npm audit --omit=dev --audit-level=critical"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koumoul-dev/pbm-exporter.git"
  },
  "keywords": [
    "PBM",
    "Percona",
    "Backup",
    "Mongodb",
    "Prometheus",
    "exporter",
    "monitoring",
    "mongodb"
  ],
  "author": "alban.mouton@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/koumoul-dev/pbm-exporter/issues"
  },
  "homepage": "https://github.com/koumoul-dev/pbm-exporter#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.10.9",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "neostandard": "^0.12.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "mongodb": "^7.0.0",
    "prom-client": "^15.1.3"
  }
}
